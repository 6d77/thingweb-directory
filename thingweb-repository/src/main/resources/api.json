{
  "swagger": "2.0",
  "info": {
    "description": "Web of Things (WoT) Thing Description Repository. Also available over CoAP.",
    "version": "0.6",
    "title": "thingweb-repository",
    "contact": {
      "email": "victor.charpenay@siemens.com"
    },
    "license": {
      "name": "MIT",
      "url": "https://spdx.org/licenses/MIT.html"
    }
  },
  "host": "localhost:8080",
  "schemes": [
    "http"
  ],
  "paths": {
    "/td": {
      "get": {
        "summary": "Lists all TDs in the repository.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "query",
            "description": "SPARQL query encoded as URI.",
            "required": false,
            "type": "string"
          },
          {
            "in": "query",
            "name": "text",
            "description": "Boolean text search query.",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "summary": "Creates (adds) a TD to the repository.",
        "consumes": [
          "application/ld+json"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "lt",
            "description": "Lifetime of the registration in seconds. If not specified, a default value of 86400 (24 hours) is assumed.",
            "required": false,
            "type": "number"
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/td/{id}": {
      "parameters": [
        {
          "in": "path",
          "name": "id",
          "type": "string",
          "required": true
        }
      ],
      "get": {
        "summary": "Returns a TD based on its id.",
        "produces": [
          "application/ld+json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "summary": "Updates an existing TD",
        "consumes": [
          "application/ld+json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "summary": "Deletes an existing TD.",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/td-lookup/ep": {
      "get": {
        "summary": "Discovers a TD based on a lookup by endpoint.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "ep",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/td-lookup/sem": {
      "get": {
        "summary": "Discovers a TD based on SPARQL or full text search (same as /td).",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "rdf",
            "description": "RDF property (URI). If this parameter is used, the unit values of a given RDF property is returned.",
            "type": "string",
            "required": false
          },
          {
            "in": "query",
            "name": "query",
            "description": "SPARQL query encoded as URI.",
            "required": false,
            "type": "string"
          },
          {
            "in": "query",
            "name": "text",
            "description": "Boolean text search query.",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "externalDocs": {
    "description": "Github",
    "url": "https://github.com/thingweb/thingweb-repository/"
  }
}